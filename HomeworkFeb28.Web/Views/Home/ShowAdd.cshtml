<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <button class="btn btn-outline-danger w-25" id="add-rows">Add Row</button>
            <form style="margin-top: 10px;" method="post" action="/home/add">
                <div id="ppl-rows">
                    <div class="row" style="margin-bottom: 10px;">
                        <div class="col-md-4">
                            <input class="form-control" type="text" name="people[0].firstname" placeholder="First Name" />
                        </div>
                        <div class="col-md-4">
                            <input class="form-control" type="text" name="people[0].lastname" placeholder="Last Name" />
                        </div>
                        <div class="col-md-4">
                            <input class="form-control" type="text" name="people[0].age" placeholder="Age" />
                        </div>
                    </div>

                </div>
                <div class="text-center mt-5">
                    <button class="btn btn-outline-primary w-25">Submit</button>
                </div>               
            </form>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/addpeople.js"></script>
}
